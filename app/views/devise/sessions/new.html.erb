<div class="signup-page">
  <div class="signup-container">
    <div class="signup-form-wrapper">
      <h2>Welcome back</h2>
      <p>Log in to continue</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
        </div><br>

        <div class="login-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
        <%= f.button :submit, "Sign in", class: "btn signup-btn" %>
        </div><br>
        <div style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
        <p><%= render "devise/shared/links" %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="signup-image">
    <%= random_image %>
  </div>
</div>
