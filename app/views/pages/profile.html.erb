<div class="sign-in">
  <h2>Account information</h2><br>
</div>
<div class= "profile-info">
  <div class="profile-info-text">
    <p><strong>First name:   </strong> <%= current_user.first_name %></p>
    <p><strong>Last name:   </strong><%= current_user.last_name %></p>
    <p><strong>Email:   </strong> <%= current_user.email %></p>
    <p><strong>Profession:   </strong><%= current_user.profession %></p>
    <p><strong>Company:   </strong><%= current_user.company %></p>
    <p><strong>Date of birth:   </strong><%= current_user.date_of_birth.strftime("%d-%m-%Y") if current_user.date_of_birth.present? %></p>
  </div>
  <div>
    <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, class: "profile-details-avatar"%>
    <% else %>
      <%= image_tag "default-avatar.png" , class: "profile-details-avatar"%>
    <% end %>
  </div>
</div>

<div class="edit-div" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
  <%= link_to "Edit profile", edit_user_registration_path, class:"edit-button" %>
</div>
